<h1>Listing Emergencies</h1>
<table>
  <tr>
    <th>Contact</th>
    <th>Number</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
	  <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Please double check!' } %></td>
    </tr>
  <% end %>
</table>
